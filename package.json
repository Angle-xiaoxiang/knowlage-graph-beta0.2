{
  "name": "bujidao-graph",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:client": "tsc && vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "server:dev": "tsx watch server/index.ts",
    "server:prod": "node dist/server/index.js",
    "server:prod-pm2": "pm2 start ecosystem.config.js",
    "server:pm2-status": "pm2 status",
    "server:pm2-restart": "pm2 restart knowlage-graph",
    "server:pm2-stop": "pm2 stop knowlage-graph",
    "server:pm2-logs": "pm2 logs knowlage-graph",
    "start": "concurrently \"npm run dev\" \"npm run server:dev\""
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "lucide-react": "^0.344.0",
    "mysql2": "^3.15.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/d3": "^7.4.3",
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6"
  }
}
